<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OtakuKun" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorNight</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColorNight</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColorNight</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColorNight</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/primaryDarkColorNight</item>
        <item name="materialAlertDialogTheme">@style/DialogSortTheme</item>
        <item name="cardViewStyle">@style/CardView.DarkTheme</item>
    </style>

    <style name="DialogSortTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/primaryLightColorNight</item>
    </style>

    <style name="CardView.DarkTheme" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/primaryColorNight</item>
    </style>
</resources>